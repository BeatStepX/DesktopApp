{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "stripInternal": true,
    "declaration": false,
    "rootDir": "./src/main",
    "outDir": "./build",
    "noResolve": false
  },
  "files": [
    "src/main/*.ts"
  ]

}